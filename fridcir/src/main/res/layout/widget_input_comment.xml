<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_input_area_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/input_comment_dialog_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/praise_item_selector_default"/>

    <LinearLayout
        android:id="@+id/ll_input_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#e4e4e4"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="10dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:focusable="true"
                android:gravity="center_vertical"
                android:hint="说点什么吧..."
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="#8290AF"
                android:textSize="14dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#22bf64"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_publish"
            android:layout_width="48dp"
            android:layout_height="36dp"
            android:background="@drawable/btn_send_bg_selector"
            android:enabled="false"
            android:gravity="center"
            android:text="发表"
            android:textColor="@drawable/btn_send_text_color_selector"
            android:textSize="14dp"/>
    </LinearLayout>
</LinearLayout>